{
    "editor": {
        "type": "root",
        "content": [
            {
                "type": "group",
                "params": { "label": "Metadata", "open": true, "fill": false },
                "content": [
                    { 
                        "type": "text", 
                        "params": { "label": "Name", "key": "name", "default": "Character name" }
                    },
                    { 
                        "type": "publish", 
                        "params": { "label": "Publish" }
                    },
                    { 
                        "type": "boolean", 
                        "params": { "label": "Simple", "key": "simple", "default": false }
                    },
                    { 
                        "type": "enum", 
                        "params": { "label": "Size", "key": "size", "type": "creatureSize", "default": "medium" }
                    },
                    { 
                        "type": "enum", 
                        "params": { "label": "Type", "key": "type", "type": "creatureType", "default": "none" }
                    },
                    { 
                        "type": "enum", 
                        "params": { "label": "Alignment", "key": "alignment", "type": "alignment", "default": 0 }
                    },
                    { 
                        "type": "text", 
                        "params": { "label": "Portrait", "key": "portrait" }
                    },
                    {
                        "type": "linkList",
                        "params": { "label": "Abilities", "key": "abilities", "fileTypes": ["abi"], "allowText": true, "placeholder": "Ability file ID ..." },
                        "conditions": [ { "type": "equals", "value": [{ "type": "metadata", "value": "simple" }, false] }]
                    },
                    {
                        "type": "group",
                        "params": { "label": "Details", "open": true },
                        "content": [
                            { 
                                "type": "text", 
                                "params": { "label": "Race", "key": "raceText" }
                            },
                            { 
                                "type": "enum", 
                                "params": { "label": "Gender", "key": "gender", "type": "gender", "default": "male" }
                            },
                            { 
                                "type": "text", 
                                "params": { "label": "Age", "key": "age" }
                            },
                            { 
                                "type": "text", 
                                "params": { "label": "Height", "key": "height" }
                            },
                            { 
                                "type": "text", 
                                "params": { "label": "Weight", "key": "weight" }
                            },
                            { 
                                "type": "text", 
                                "conditions": [ { "type": "equals", "value": [{ "type": "metadata", "value": "simple" }, true] }],
                                "params": { "label": "Languages", "key": "languages" }
                            },
                            { 
                                "type": "text", 
                                "params": { "label": "Occupation", "key": "occupation" }
                            },
                            { 
                                "type": "textarea", 
                                "params": { "label": "Appearance", "key": "appearance" }
                            },
                            { 
                                "type": "textarea", 
                                "params": { "label": "Description", "key": "description" }
                            },
                            { 
                                "type": "textarea", 
                                "params": { "label": "History", "key": "history" },
                                "conditions": [ { "type": "equals", "value": [{ "type": "metadata", "value": "simple" }, false] }]
                            },
                            { 
                                "type": "textarea", 
                                "params": { "label": "Notes", "key": "notes" },
                                "conditions": [ { "type": "equals", "value": [{ "type": "metadata", "value": "simple" }, false] }]
                            }
                        ]
                    },
                    { 
                        "type": "group",
                        "params": { "label": "Stats", "open": true },
                        "conditions": [ { "type": "equals", "value": [{ "type": "metadata", "value": "simple" }, false] }],
                        "content": [
                            { 
                                "type": "number", 
                                "params": { "label": "Level", "key": "level" }
                            },
                            { 
                                "type": "linkInput", 
                                "default": null,
                                "params": { "label": "Class", "key": "classFile", "placeholder": "Class id...", "fileTypes": ["cla"] }
                            },
                            { 
                                "type": "enum", 
                                "params": { "label": "Hit Dice", "key": "hitDice", "type": "dice", "default": 0 },
                                "conditions": [ { "type": "equals", "value": [{ "type": "metadata", "value": "classFile" }, { "type": "any", "value": ["", null] }] }]
                            },
                            { 
                                "type": "option", 
                                "params": { "label": "Health", "key": "health", "type": "number" }
                            },
                            { 
                                "type": "option", 
                                "params": { "label": "AC", "key": "ac", "type": "number" }
                            },
                            { 
                                "type": "option", 
                                "params": { "label": "Proficiency", "key": "proficiency", "type": "number" }
                            },
                            { 
                                "type": "option", 
                                "params": { "label": "Initiative", "key": "initiative", "type": "number" }
                            },
                            { 
                                "type": "text", 
                                "params": { "label": "Resistances", "key": "resistances", "type": "string" }
                            },
                            { 
                                "type": "text", 
                                "params": { "label": "Advantages", "key": "advantages", "type": "string" }
                            },
                            { 
                                "type": "text", 
                                "params": { "label": "Disadvantages", "key": "disadvantages", "type": "string" }
                            },
                            { 
                                "type": "text", 
                                "params": { "label": "Vulnerabilities", "key": "vulnerabilities", "type": "string" }
                            },
                            { 
                                "type": "text", 
                                "params": { "label": "DMG Immunities", "key": "dmgImmunities", "type": "string" }
                            },
                            { 
                                "type": "text", 
                                "params": { "label": "COND Immunities", "key": "conImmunities", "type": "string" }
                            },
                            { 
                                "type": "selectionInput", 
                                "params": { "label": "Speed", "key": "speed", "enum": "movement", "type": "number", "default": 0 }
                            },
                            { 
                                "type": "selectionInput", 
                                "params": { "label": "Senses", "key": "senses", "enum": "sense", "type": "number", "default": 0 }
                            }
                        ]
                    },
                    { 
                        "type": "group",
                        "params": { "label": "Attributes", "open": true },
                        "conditions": [ { "type": "equals", "value": [{ "type": "metadata", "value": "simple" }, false] }],
                        "content": [
                            { 
                                "type": "number", 
                                "params": { "label": "STR", "key": "str" }
                            },
                            { 
                                "type": "number", 
                                "params": { "label": "DEX", "key": "dex" }
                            },
                            { 
                                "type": "number", 
                                "params": { "label": "CON", "key": "con" }
                            },
                            { 
                                "type": "number", 
                                "params": { "label": "INT", "key": "int" }
                            },
                            { 
                                "type": "number", 
                                "params": { "label": "WIS", "key": "wis" }
                            },
                            { 
                                "type": "number", 
                                "params": { "label": "CHA", "key": "cha" }
                            }
                        ]
                    },
                    {
                        "type": "group",
                        "params": { "label": "Proficiencies", "open": true },
                        "conditions": [ { "type": "equals", "value": [{ "type": "metadata", "value": "simple" }, false] }],
                        "content": [
                            { 
                                "type": "selection", 
                                "params": { "label": "Saving throws", "key": "proficienciesSave", "enum": "attr" }
                            },
                            { 
                                "type": "selection", 
                                "params": { "label": "Skills", "key": "proficienciesSkill", "enum": "skill" }
                            },
                            { 
                                "type": "selection", 
                                "params": { "label": "Armors", "key": "proficienciesArmor", "enum": "armor" }
                            },
                            { 
                                "type": "selection", 
                                "params": { "label": "Weapons", "key": "proficienciesWeapon", "enum": "weapon" }
                            },
                            { 
                                "type": "selection", 
                                "params": { "label": "Tools", "key": "proficienciesTool", "enum": "tool" }
                            },
                            { 
                                "type": "selection", 
                                "params": { "label": "Languages", "key": "proficienciesLanguage", "enum": "language" }
                            }
                        ]
                    },
                    {
                        "type": "group",
                        "params": { "label": "Spells", "open": true },
                        "conditions": [ { "type": "equals", "value": [{ "type": "metadata", "value": "simple" }, false] }],
                        "content": [
                            { 
                                "type": "enum", 
                                "params": { "label": "Attribute", "key": "spellAttribute", "type": "optionalAttr", "default": "none" }
                            },
                            {
                                "type": "list",
                                "conditions": [{ "type": "notEquals", "value": [{ "type": "metadata", "value": "spellAttribute" }, "none"] }],
                                "params": { "label": "Spell slots", "key": "spellSlots", "type": "number", "default": 1, "editEnabled": true, "reverse": true }
                            },
                            {
                                "type": "linkList",
                                "conditions": [{ "type": "notEquals", "value": [{ "type": "metadata", "value": "spellAttribute" }, "none"] }],
                                "params": { "label": "Spells", "key": "spells", "fileTypes": ["spe"], "placeholder": "Spell file ID ..." }
                            }
                        ]
                    }
                ]
            },
            { 
                "type": "group",
                "params": { "label": "Editor", "open": false, "fill": true },
                "content": [
                    { 
                        "type": "editor"
                    }
                ]
            }
        ]
    },
    "renderer": { "type": "cha" }
}