            {
                "type": "group",
                "params": { "label": "Metadata", "open": true },
                "content": [
                    {
                        "type": "text", 
                        "params": { "label": "Name", "key": "name", "default": "Class name" }
                    },
                    { 
                        "type": "publish", 
                        "params": { "label": "Publish" }
                    },
                    {
                        "type": "textarea",
                        "params": { "label": "Description", "key": "description", "fill": true, "useSyntaxEditor": false  }
                    }
                ]
            },
            {
